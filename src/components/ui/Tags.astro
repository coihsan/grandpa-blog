---
import { getCollection } from "astro:content"
const posts = await getCollection('posts')
const tags = [...new Set(posts.map((post) => post.data.tags))]
---

<ul class="flex flex-wrap gap-2 pt-6">
    { tags.map((tag) => (
      <li class="px-3 py-1 rounded-full text-sm bg-onyx-600 border border-onyx-500 hover:text-onyx-50 hover:border-onyx-50 transitionAll"><a href={`/tags/${tag}`}>{tag}</a></li>
    )) }
</ul>
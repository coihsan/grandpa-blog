---
import { Icon } from 'astro-icon/components';
import Asside from './section/Asside.astro';
---

<Asside borderBottom={true}>
    <div class="flex flex-col bg-gradient-to-br from-sky-500 via-teal-700 to-purple-500 rounded-lg p-9 md:p-3 lg:p-3">
        <h2 class="font-semibold text-xl pb-3">Subscribe</h2>
        <p class="">Stay up-to-date with news from GreenFrog</p>
        <a class="flex items-center justify-center gap-3 rounded-full mt-6 px-4 py-2 bg-onyx-800 hover:bg-onyx-600" href="/rss.xml" target="_blank" rel="noopener noreferrer">
            <Icon name="rssBox" width={24} height={24} />
            <span>RSS Feed</span>
        </a>
    </div>
</Asside>